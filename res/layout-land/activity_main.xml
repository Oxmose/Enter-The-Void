<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MainTheme"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.alexytorres.enterthevoid.MainActivity" >

    <Button style="@style/button"
        android:id="@+id/activity_main_button_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/settings" />

    <Button style="@style/button"
        android:id="@+id/activity_main_button_newgame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activity_main_button_settings"
        android:text="@string/new_game"
        android:layout_marginBottom="3dp" />

    <ImageView
        android:id="@+id/activity_main_image_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/title" />

    <Button
        android:id="@+id/activity_main_button_resumegame"
        style="@style/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activity_main_button_newgame"
        android:text="@string/resume_game"
        android:layout_marginBottom="3dp" />

</RelativeLayout>