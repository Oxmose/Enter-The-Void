<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

    </style>
    <style name="MainTheme" parent="AppBaseTheme">
        <item name="android:background">@color/dark_grey</item>
    </style>
    
   <style name="Title" parent="AppTheme">
       <item name="android:textColor">@color/light_grey</item>
       <item name="android:textStyle">italic</item>
       <item name="android:textSize">25sp</item>
   </style>
   
   <style name="lightText" parent="AppTheme">
       <item name="android:textColor">@color/background_material_dark</item>
       <item name="android:textSize">16sp</item>
   </style>
   
   <style name="lightTextBright" parent="lightText">
       <item name="android:textColor">@color/light_grey</item>
   </style>
   
   <style name="button" parent="AppBaseTheme">
       <item name="android:background">@color/transparent_grey</item>
       <item name="android:textSize">20sp</item>
       <item name="android:textStyle">italic</item>
   </style>

</resources>
